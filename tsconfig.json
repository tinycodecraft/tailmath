{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/assets/*":["./src/app/assets/*"],
      "@/lib/ui/*": ["./src/app/ui/*"],
      "@/lib/el/*": ["./src/app/el/*"],
      "@/lib/tx/*": ["./src/app/tx/*"],
      "@/*": ["./src/*"],
      
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx","./src/app/assets/fonts.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
